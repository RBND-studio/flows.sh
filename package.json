{
  "name": "flows.sh",
  "description": "User onboarding for modern SaaS â€“ Flows lets you build any onboarding you want. Guide users, increase feature adoption, and improve revenue.",
  "homepage": "https://flows.sh",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "tsc": "turbo run tsc",
    "app": "pnpm --filter app",
    "docs": "pnpm --filter docs",
    "web": "pnpm --filter web",
    "ui": "pnpm --filter ui",
    "icons": "pnpm --filter icons",
    "be": "pnpm --filter backend",
    "ws": "pnpm --filter websocket",
    "be:dev": "turbo run dev --filter=backend --filter=worker --filter=websocket",
    "worker": "pnpm --filter worker",
    "db": "pnpm --filter db",
    "e2e": "pnpm --filter e2e",
    "prepare": "husky || true",
    "pre-push": "TURBO_SCM_BASE=stage turbo lint tsc test spellcheck pre-commit lint:md --affected",
    "spellcheck": "pnpm cspell . --quiet",
    "new-example": "pnpm dlx plop example",
    "lint:md": "pnpm markdownlint '**/*.mdx' '**/*.md'"
  },
  "devDependencies": {
    "cspell": "^9.4.0",
    "eslint": "8.57.1",
    "husky": "^9.1.7",
    "markdownlint-cli": "^0.47.0",
    "prettier": "^3.7.2",
    "tsconfig": "workspace:*",
    "turbo": "^2.7.2"
  },
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": "^24"
  }
}
