{
  "name": "flows-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "tsc": "pnpm -r tsc",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "app": "pnpm --filter app",
    "web": "pnpm --filter web",
    "ui": "pnpm --filter ui",
    "design-system": "pnpm --filter design-system",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "8.49.0",
    "husky": "^8.0.3",
    "prettier": "^3.0.3",
    "tsconfig": "workspace:*",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.7.5"
}
