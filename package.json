{
  "name": "flows-monorepo",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "tsc": "turbo run tsc",
    "app": "pnpm --filter app",
    "docs": "pnpm --filter docs",
    "web": "pnpm --filter web",
    "ui": "pnpm --filter ui",
    "be": "pnpm --filter backend",
    "db": "pnpm --filter db",
    "e2e": "pnpm --filter e2e",
    "prepare": "husky || true",
    "pre-push": "turbo lint tsc test spellcheck pre-commit",
    "spellcheck": "pnpm cspell .  --quiet"
  },
  "devDependencies": {
    "concurrently": "^9.0.1",
    "cspell": "^8.14.2",
    "eslint": "8.57.0",
    "husky": "^9.1.6",
    "prettier": "^3.3.3",
    "tsconfig": "workspace:*",
    "turbo": "^2.2.3"
  },
  "packageManager": "pnpm@9.12.2"
}
