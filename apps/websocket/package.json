    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "dotenv": "^17.2.3",
    "eslint-config-custom": "workspace:*",
    "jest": "^30.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.2.2",
    "swc-loader": "^0.2.7",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig": "workspace:*",
    "tsconfig-paths": "^4.2.0",
    "typescript": "5.9.3"
  },
