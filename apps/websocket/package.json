{
  "name": "websocket",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "NODE_ENV=production nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --passWithNoTests",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "tsc": "tsc --noEmit",
    "pre-commit": "pnpm test:e2e",
    "nest": "nest"
  },
  "dependencies": {
    "@confluentinc/kafka-javascript": "^1.8.0",
    "@fastify/otel": "^0.16.0",
    "@nestjs/common": "^11.1.14",
    "@nestjs/config": "^4.0.3",
    "@nestjs/core": "^11.1.14",
    "@nestjs/platform-fastify": "^11.1.14",
    "@nestjs/platform-ws": "^11.1.14",
    "@nestjs/websockets": "^11.1.14",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.70.0",
