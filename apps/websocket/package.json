    "@opentelemetry/sdk-trace-base": "^2.5.1",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "db": "workspace:*",
    "fastify": "^5.7.4",
    "nestjs-otel": "^8.0.2",
    "nestjs-pino": "^4.6.0",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@flows/testing": "workspace:*",
    "@flows/types": "workspace:*",
